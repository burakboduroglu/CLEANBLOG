<%- include('partials/_header') -%>
<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <%- include('partials/_page-header') -%>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2 class="section-heading"> <%= blog.title %> </h2>
          <p>
            <%= blog.detail %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-5 col-md-10 mx-auto">
          <a href="/blogs/edit/<%= blog._id %>" type="button" class="btn btn-primary btn-lg">Update POST</a>
          <a href="/blogs/<%= blog._id %>?_method=DELETE" class="btn btn-danger btn-lg" onclick="confirm('Are you sure you want to delete this post?')"><span>Delete Post</span></a>
        </div>

      </div>
    </div>

  </article>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
